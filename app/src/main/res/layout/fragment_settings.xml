<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/turkiz200" />
    </LinearLayout>

    <TextView
        android:id="@+id/settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Settings"
        android:textColor="#333333"
        android:textSize="25dp"
        android:fontFamily="@font/raleway_medium"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_fields"
        android:layout_width="404dp"
        android:layout_height="380dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header">


        <Button
            android:id="@+id/manage_locations"
            android:layout_width="156dp"
            android:layout_height="41dp"

            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/raleway_medium"
            android:text="Manage Locations"
            android:textColor="#FFFFFF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_settings" />

        <Button
            android:id="@+id/app_settings"
            android:layout_width="156dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/raleway_medium"
            android:text="App Settings"
            android:textColor="#FFFFFF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/personal_settings"
            android:layout_width="156dp"
            android:layout_height="41dp"

            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners"
            android:fontFamily="@font/raleway_medium"
            android:text="Personal Settings"

            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manage_locations" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_fields"
        app:layout_constraintVertical_bias="0.0">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corners"
            android:text="Log out"
            android:fontFamily="@font/raleway_medium"

            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="554dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></Space>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>