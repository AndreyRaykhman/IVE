    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-40dp"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:background="@drawable/bg_of_task_item"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newTaskNameTitle"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Task Name"
                android:layout_marginBottom="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/newTaskNameEditText"
                android:inputType="text"
                android:hint="What do you want to do?"
                android:textColorHint="#B5B5B5"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="12dp"
                android:background="@drawable/task_input"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newTaskDescriptionTitle"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Task Description"
                android:layout_marginBottom="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/newTaskDescriptionEditText"
                android:inputType="text"
                android:hint="Give some details.."
                android:textColorHint="#B5B5B5"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="12dp"
                android:background="@drawable/task_input"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newTaskPriorityTitle"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Priority"
                android:layout_marginBottom="10dp" />
            <Spinner

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/newTaskPrioritySpinner"
                android:inputType="number"
                android:hint="Is this really urgent?"
                android:textColorHint="#B5B5B5"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="12dp"
                android:background="@drawable/task_input"
                android:entries="@array/priority_array"
                />

        </LinearLayout>

        
        
    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/createTaskButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create"
        />
    <Button
        android:id="@+id/cancelCreateButton"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cancel"
        />

