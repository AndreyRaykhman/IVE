<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/taskUiItem"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"

    android:layout_marginTop="0dp"
    android:layout_height="90dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/location_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/task_arrow" />

        <ImageView
            android:id="@+id/task_line"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/task_line3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="202dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Do Home Work"
            android:textColor="#333333"
            android:textSize="22sp"
            android:fontFamily="@font/raleway_medium"
            />

        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Sadna project"
            android:textColor="#ADADAD"
            android:textSize="18sp"
            android:fontFamily="@font/raleway_medium"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="35dp"
        >

        <TextView
            android:id="@+id/taskDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="30 Minutes"
            android:textColor="#27A1AC"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"
            />

    </LinearLayout>

</LinearLayout>