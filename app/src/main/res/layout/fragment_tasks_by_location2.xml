<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    android:paddingBottom="60dp"
    tools:context=".pages.home.tasksbylocation.TasksByLocationFragment"
    >

    <LinearLayout
        android:id="@+id/linear_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/turkiz200" />

        <TextView
            android:id="@+id/tasksListMainTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:text="Work"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/showing_tasks_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Showing tasks by urgency"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_logo" />

    <!--
    in line 41 : android:layout_height="wrap_content"
    makes the tasksListBottomText not show on app (you can't scroll
    low enough to show it).
    changing the height, for example
    android:layout_height="200dp"
    makes the tasksListBottomText show, but the tasks
    will be cut to only the number of tasks that can fit into 200dp
    -->

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/tasksRecycleList"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showing_tasks_by">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tasksListBottomText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="176dp"
        android:text="That's it!"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasksRecycleList"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>